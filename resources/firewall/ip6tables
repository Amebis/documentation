##########
# FILTER #
##########
*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]

#########
# INPUT #
#########
-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT
-A INPUT -p ipv6-icmp -j ACCEPT
-A INPUT -i lo -j ACCEPT

# SSH
-A INPUT -p tcp -m state --state NEW -m tcp --dport 22 -j ACCEPT
# HTTP
-A INPUT -p tcp -m state --state NEW -m tcp --dport 80 -j ACCEPT
# HTTPS
-A INPUT -p tcp -m state --state NEW -m tcp --dport 443 -j ACCEPT
# OpenVPN
-A INPUT -p udp -m state --state NEW -m udp --dport 1194:1258 -j ACCEPT
-A INPUT -p tcp -m state --state NEW -m tcp --dport 1194:1258 -j ACCEPT

# WireGuard (wg0)
-A INPUT -p udp -m state --state NEW -m udp --dport 51820 -j ACCEPT

# Local DNS for VPN clients
#-A INPUT -s fc00::/7 -p udp -m state --state NEW -m udp --dport 53 -j ACCEPT
#-A INPUT -s fc00::/7 -p tcp -m state --state NEW -m tcp --dport 53 -j ACCEPT

-A INPUT -j REJECT --reject-with icmp6-adm-prohibited

###########
# FORWARD #
###########
# OpenVPN
-A FORWARD -i tun+ ! -o tun+ -j ACCEPT
-A FORWARD ! -i tun+ -o tun+ -j ACCEPT
# WireGuard
-A FORWARD -i wg0 ! -o wg0 -j ACCEPT
-A FORWARD ! -i wg0 -o wg0 -j ACCEPT

# Be more specific through which interfaces routing is allowed
#-A FORWARD -i tun+ -o eth0 -j ACCEPT
#-A FORWARD -i eth0 -o tun+ -j ACCEPT

# Do not allow VPN clients to be contacted from the outside
#-A FORWARD -m state --state RELATED,ESTABLISHED -j ACCEPT
#-A FORWARD -i tun+ -o eth0 -j ACCEPT

-A FORWARD -j REJECT --reject-with icmp6-adm-prohibited
COMMIT

#######
# NAT #
#######
*nat
:PREROUTING ACCEPT [0:0]
:INPUT ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]

-A POSTROUTING -s fc00::/7 -j MASQUERADE
#-A POSTROUTING -s fc00::/7 -j SNAT --to-source 2001:db8::1
# Distribute NAT over IPs between 2001:db8::1 and 2001:db8::4 (inclusive)
#-A POSTROUTING -s fc00::/7 -j SNAT --to-source 2001:db8::1-2001:db8::4
COMMIT
